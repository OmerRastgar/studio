generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Compliance Frameworks (master - added by Admin)
model Framework {
  id          String @id @default(uuid())
  name        String @unique
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  controls Control[]
  projects Project[]
  
  @@map("frameworks")
}

// Controls (master template - never modified by customers)
model Control {
  id          String @id @default(uuid())
  frameworkId String @map("framework_id")
  code        String
  title       String
  description String?
  category    String?
  // tags        String[] // Removed
  tags        Tag[]    @relation("ControlTags")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  framework Framework @relation(fields: [frameworkId], references: [id], onDelete: Cascade)
  projectControls ProjectControl[]
  
  @@unique([frameworkId, code])
  @@map("controls")
}

model Tag {
  id        String   @id @default(uuid())
  name      String   @unique
  controls  Control[] @relation("ControlTags")
  evidence  Evidence[] @relation("EvidenceTags")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("tags")
}

// Project Control (customer's copy per project)
model ProjectControl {
  id            String @id @default(uuid())
  projectId     String @map("project_id")
  controlId     String @map("control_id")
  progress      Int @default(0)
  evidenceCount Int @default(0) @map("evidence_count")
  notes         String?
  reviewerNotes String? @map("reviewer_notes")
  isFlagged     Boolean @default(false) @map("is_flagged")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  control Control @relation(fields: [controlId], references: [id], onDelete: Cascade)
  auditRequests AuditRequest[]
  evidenceItems EvidenceItem[]
  evidence      Evidence[] // Explicit Many-to-Many
  
  @@unique([projectId, controlId])
  @@map("project_controls")
}

// Evidence Items linked to project controls
model EvidenceItem {
  id               String @id @default(uuid())
  projectControlId String @map("project_control_id")
  fileUrl          String? @map("file_url")
  fileName         String @map("file_name")
  tags             String[]
  tagSource        TagSource @default(manual) @map("tag_source")
  uploadedById     String @map("uploaded_by_id")
  uploadedAt       DateTime @default(now()) @map("uploaded_at")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")
  
  projectControl ProjectControl @relation(fields: [projectControlId], references: [id], onDelete: Cascade)
  uploadedBy User @relation("UploadedEvidence", fields: [uploadedById], references: [id])
  
  @@map("evidence_items")
}

// Project status for approval workflow

model PolicyReview {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  evidenceId String   @map("evidence_id")
  reviewedAt DateTime @default(now()) @map("reviewed_at")

  user     User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  evidence Evidence     @relation(fields: [evidenceId], references: [id], onDelete: Cascade)

  @@unique([userId, evidenceId])
  @@map("policy_reviews")
}
enum ProjectStatus {
  pending
  in_progress
  review_pending
  approved
  rejected
  returned
  completed
}

model Project {
  id                String        @id @default(uuid())
  name              String
  customerName      String        @map("customer_name")
  customerId        String?       @map("customer_id")
  auditorId         String?       @map("auditor_id")
  frameworkId       String?       @map("framework_id")
  status            ProjectStatus @default(pending)
  rejectionReason   String?       @map("rejection_reason")
  reviewerAuditorId String?       @map("reviewer_auditor_id")
  description       String?
  scope             String?
  startDate         DateTime?     @map("start_date")
  dueDate           DateTime?     @map("due_date")
  endDate           DateTime?     @map("end_date")
  createdAt         DateTime      @default(now()) @map("created_at")
  updatedAt         DateTime      @updatedAt @map("updated_at")
  
  evidence        Evidence[] // Implicit Many-to-Many
  projectControls ProjectControl[]
  projectShares   ProjectShare[]
  auditRequests   AuditRequest[]
  auditEvents     AuditEvent[]
  customer        User?      @relation("CustomerProjects", fields: [customerId], references: [id])
  auditor         User?      @relation("AuditorProjects", fields: [auditorId], references: [id])
  reviewerAuditor User?      @relation("ReviewerProjects", fields: [reviewerAuditorId], references: [id])
  framework       Framework? @relation(fields: [frameworkId], references: [id])
  timeLogs        ProjectTimeLog[]
  projectIssues   ProjectIssue[]
  agents          Agent[]
  
  @@map("projects")
}

// Project sharing for compliance users
model ProjectShare {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  projectId String   @map("project_id")
  createdAt DateTime @default(now()) @map("created_at")

  user    User    @relation("SharedProjects", fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
  @@map("project_shares")
}

model User {
  id          String     @id @default(uuid())
  name        String
  email       String     @unique
  password    String
  avatarUrl   String?    @map("avatar_url")
  role        UserRole
  status      UserStatus @default(Active)
  lastActive  DateTime?  @map("last_active")
  createdById String?    @map("created_by_id")
  managerId   String?    @map("manager_id") // Link to Manager
  linkedCustomerId String? @map("linked_customer_id") // Link Compliance to Customer
  forcePasswordChange Boolean @default(false) @map("force_password_change")
  pushSubscription Json?     @map("push_subscription")
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")
  
  createdBy                    User?                       @relation("CreatedUsers", fields: [createdById], references: [id])
  createdUsers                 User[]                      @relation("CreatedUsers")
  
  manager                      User?                       @relation("ManagerUsers", fields: [managerId], references: [id])
  managedUsers                 User[]                      @relation("ManagerUsers")

  linkedCustomer               User?                       @relation("CustomerCompliance", fields: [linkedCustomerId], references: [id])
  complianceUsers              User[]                      @relation("CustomerCompliance")

  auditor                      Auditor?
  userCourses                  UserCourse[]
  customerProjects             Project[]                   @relation("CustomerProjects")
  auditorProjects              Project[]                   @relation("AuditorProjects")
  reviewerProjects             Project[]                   @relation("ReviewerProjects")
  sharedProjects               ProjectShare[]              @relation("SharedProjects")
  uploadedEvidence             EvidenceItem[]              @relation("UploadedEvidence")
  uploadedProjectEvidence      Evidence[]                  @relation("UploadedProjectEvidence")
  conversationParticipants     ConversationParticipant[]
  sentMessages                 Message[]
  auditorRequests              AuditRequest[]              @relation("AuditorRequests")
  customerRequests             AuditRequest[]              @relation("CustomerRequests")
  auditorEvents                AuditEvent[]                @relation("AuditorEvents")
  customerEvents               AuditEvent[]                @relation("CustomerEvents")
  timeLogs                     ProjectTimeLog[]
  reportedIssues               ProjectIssue[]              @relation("CustomerIssues")
  evidenceAnnotations          EvidenceAnnotation[]        @relation("EvidenceComments")
  policyReviews                PolicyReview[]
  
  // CASB & Findings relations
  casbIntegrations             CASBIntegration[]           @relation("CASBIntegrations")
  assignedFindings             Finding[]                   @relation("AssignedFindings")
  resolvedFindings             Finding[]                   @relation("ResolvedFindings")
  findingComments              FindingComment[]            @relation("FindingComments")
  
  bio                          String?                     // User biography/about me
  integrations                 UserIntegration[]           // Personal integrations (Google, etc)
  notifications                Notification[]

  @@map("users")
}

model Notification {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  type      String   // 'message', 'meeting', 'audit_request', 'project_status', 'evidence_comment', 'deadline', 'issue', 'evidence_upload', 'assignment', 'user_created', 'password_reset'
  title     String
  message   String
  link      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model Auditor {
  id             String   @id
  userId         String   @unique @map("user_id")
  experience     String?
  certifications String[]
  progress       Int      @default(0)
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("auditors")
}

model Agent {
  id        String        @id
  name      String
  platform  AgentPlatform
  status    AgentStatus   @default(Pending)
  
  // Project assignment (for osquery management)
  projectId String?       @map("project_id")
  project   Project?      @relation(fields: [projectId], references: [id])
  
  // Device details
  hostname  String?
  ipAddress String?       @map("ip_address")
  osVersion String?       @map("os_version")
  
  lastSync  DateTime?     @map("last_sync")
  lastSeenAt DateTime?    @map("last_seen_at")
  version   String?
  createdAt DateTime      @default(now()) @map("created_at")
  updatedAt DateTime      @updatedAt @map("updated_at")
  
  evidence Evidence[]
  findings Finding[]
  
  @@map("agents")
}

model Evidence {
  id           String       @id @default(uuid())
  projectId    String       @map("project_id")

  agentId      String?      @map("agent_id")
  fileName     String       @map("file_name")
  fileUrl      String?      @map("file_url")
  type         EvidenceType @default(document)
  // tags         String[] // Removed
  tags         Tag[]       @relation("EvidenceTags")
  uploadedAt   DateTime     @default(now()) @map("uploaded_at")
  uploadedById String       @map("uploaded_by_id")
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")
  
  project    Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  controls   ProjectControl[] // Explicit Many-to-Many
  agent      Agent?          @relation(fields: [agentId], references: [id], onDelete: SetNull)
  uploadedBy User            @relation("UploadedProjectEvidence", fields: [uploadedById], references: [id])
  annotations EvidenceAnnotation[]
  policyReviews PolicyReview[]

  @@map("evidence")
}

model AuditLog {
  id            String        @id
  userName      String        @map("user_name")
  userAvatarUrl String?       @map("user_avatar_url")
  action        String
  details       String?
  timestamp     DateTime      @default(now())
  severity      AuditSeverity @default(Low)
  
  @@map("audit_logs")
}

model Course {
  id           String   @id
  title        String
  description  String?
  duration     String?
  thumbnailUrl String?  @map("thumbnail_url")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  
  userCourses UserCourse[]
  
  @@map("courses")
}

model UserCourse {
  id             String       @id @default(uuid())
  userId         String       @map("user_id")
  courseId       String       @map("course_id")
  status         CourseStatus @default(NotStarted)
  progress       Int          @default(0)
  completionDate DateTime?    @map("completion_date")
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")
  
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  @@unique([userId, courseId])
  @@map("user_courses")
}

model ComplianceActivity {
  id           String         @id
  evidenceName String         @map("evidence_name")
  status       ActivityStatus
  timestamp    DateTime       @default(now())
  
  @@map("compliance_activities")
}

// Audit requests from auditor to customer
model AuditRequest {
  id          String    @id @default(uuid())
  auditorId   String    @map("auditor_id")
  customerId  String    @map("customer_id")
  projectId   String?   @map("project_id")
  title       String
  description String?
  dueDate     DateTime? @map("due_date")
  status      String    @default("Pending")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  auditor  User     @relation("AuditorRequests", fields: [auditorId], references: [id])
  customer User     @relation("CustomerRequests", fields: [customerId], references: [id])
  project  Project? @relation(fields: [projectId], references: [id])
  controlId String? @map("control_id")
  control  ProjectControl? @relation(fields: [controlId], references: [id])

  @@map("audit_requests")
}

// Audit events/calendar for auditors
model AuditEvent {
  id          String    @id @default(uuid())
  auditorId   String    @map("auditor_id")
  customerId  String?   @map("customer_id")
  projectId   String?   @map("project_id")
  title       String
  description String?
  startTime   DateTime  @map("start_time")
  endTime     DateTime  @map("end_time")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  auditor  User     @relation("AuditorEvents", fields: [auditorId], references: [id])
  customer User?    @relation("CustomerEvents", fields: [customerId], references: [id])
  project  Project? @relation(fields: [projectId], references: [id])
  syncedToJira Boolean @default(false) @map("synced_to_jira") // Track if meeting sent to Jira

  @@map("audit_events")
}

// Chat System
model Conversation {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  participants ConversationParticipant[]
  messages     Message[]
  
  @@map("conversations")
}

model ConversationParticipant {
  id             String    @id @default(uuid())
  conversationId String    @map("conversation_id")
  userId         String    @map("user_id")
  lastReadAt     DateTime? @map("last_read_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([conversationId, userId])
  @@map("conversation_participants")
}

model Message {
  id             String   @id @default(uuid())
  conversationId String   @map("conversation_id")
  senderId       String   @map("sender_id")
  content        String
  createdAt      DateTime @default(now()) @map("created_at")
  
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User         @relation(fields: [senderId], references: [id])
  
  @@map("messages")
}

// Enums
enum UserRole {
  admin
  auditor
  customer
  manager
  reviewer
  compliance
}

enum UserStatus {
  Active
  Inactive
}

enum AgentPlatform {
  windows
  macos
  linux
}

enum AgentStatus {
  Active
  Inactive
  Pending
  Offline
  Error
}

enum EvidenceType {
  document
  screenshot
  log
  network
  config
  image
  audio
  video
  spreadsheet
  pdf
  other
}

enum AuditSeverity {
  Low
  Medium
  High
}

enum CourseStatus {
  NotStarted @map("Not Started")
  InProgress @map("In Progress")
  Completed
}

enum ActivityStatus {
  Accepted
  Rejected
  Pending
}

enum TagSource {
  manual
  tagging_engine
}

model ProjectTimeLog {
  id        String   @id @default(uuid())
  projectId String   @map("project_id")
  userId    String   @map("user_id")
  date      DateTime @db.Date // Store purely as date (midnight UTC)
  
  // Duration in seconds
  durationSeconds      Int @default(0) @map("duration_seconds")
  writingSeconds       Int @default(0) @map("writing_seconds")
  attachingSeconds     Int @default(0) @map("attaching_seconds")
  chatSeconds          Int @default(0) @map("chat_seconds")
  reviewSeconds        Int @default(0) @map("review_seconds")
  syncedSeconds        Int @default(0) @map("synced_seconds") // Hours already sent to Jira
  meetingSyncedSeconds Int @default(0) @map("meeting_synced_seconds") // Meeting hours sent to Jira

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId, date])
  @@map("project_time_logs")
}

// Customer Reported Issues
model ProjectIssue {
  id          String   @id @default(uuid())
  projectId   String   @map("project_id")
  customerId  String   @map("customer_id")
  title       String
  description String
  status      String   @default("open") // open, resolved, in_progress
  resolution  String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  project     Project  @relation(fields: [projectId], references: [id])
  customer    User     @relation("CustomerIssues", fields: [customerId], references: [id])

  @@map("project_issues")
}

model EvidenceAnnotation {
  id         String   @id @default(uuid())
  evidenceId String   @map("evidence_id")
  authorId   String   @map("author_id")
  text       String
  page       Int      @default(1)
  x          Float    // Percentage 0.0-100.0 or 0.0-1.0
  y          Float    // Percentage
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  evidence   Evidence @relation(fields: [evidenceId], references: [id], onDelete: Cascade)
  author     User     @relation("EvidenceComments", fields: [authorId], references: [id])

  @@map("evidence_annotations")
}// ============================================
// CASB Integration & Findings Models
// ============================================

model CASBIntegration {
  id                String              @id @default(uuid())
  name              String
  type              CASBIntegrationType
  vendor            String?
  status            IntegrationStatus   @default(pending)
  
  authType          AuthType
  credentials       Json?
  tokenExpiry       DateTime?
  
  config            Json?
  syncFrequency     Int                 @default(3600)
  lastSyncAt        DateTime?
  nextSyncAt        DateTime?
  
  createdById       String              @map("created_by_id")
  createdAt         DateTime            @default(now()) @map("created_at")
  updatedAt         DateTime            @updatedAt @map("updated_at")
  
  createdBy         User                @relation("CASBIntegrations", fields: [createdById], references: [id])
  findings          Finding[]
  syncLogs          IntegrationSyncLog[]
  
  @@map("casb_integrations")
}

model Finding {
  id                String           @id @default(uuid())
  
  integrationId     String?          @map("integration_id")
  integration       CASBIntegration? @relation(fields: [integrationId], references: [id])
  agentId           String?          @map("agent_id")
  agent             Agent?           @relation(fields: [agentId], references: [id])
  
  title             String
  description       String
  alertName         String?          @map("alert_name") // Specific alert/rule name
  severity          FindingSeverity
  category          FindingCategory
  type              String
  
  status            FindingStatus    @default(open)
  notified          Boolean          @default(false) // Whether user has been notified
  assignedToId      String?          @map("assigned_to_id")
  assignedTo        User?            @relation("AssignedFindings", fields: [assignedToId], references: [id])
  
  affectedResource  String?          @map("affected_resource")
  affectedUser      String?          @map("affected_user") // Email or username of affected user
  resourceType      String?          @map("resource_type")
  location          String?
  cloudService      String?          @map("cloud_service") // Azure, AWS, GCP, etc.
  
  rawData           Json?            @map("raw_data")
  evidence          String[]
  
  frameworks        String[]
  controls          String[]
  
  recommendation    String?
  remediationSteps  String?          @map("remediation_steps")
  dueDate           DateTime?        @map("due_date")
  resolvedAt        DateTime?        @map("resolved_at")
  resolvedById      String?          @map("resolved_by_id")
  resolvedBy        User?            @relation("ResolvedFindings", fields: [resolvedById], references: [id])
  
  firstSeenAt       DateTime         @default(now()) @map("first_seen_at")
  lastSeenAt        DateTime         @default(now()) @map("last_seen_at")
  occurrenceCount   Int              @default(1) @map("occurrence_count")
  
  createdAt         DateTime         @default(now()) @map("created_at")
  updatedAt         DateTime         @updatedAt @map("updated_at")
  
  comments          FindingComment[]
  
  @@map("findings")
}

model FindingComment {
  id         String   @id @default(uuid())
  findingId  String   @map("finding_id")
  authorId   String   @map("author_id")
  content    String
  createdAt  DateTime @default(now()) @map("created_at")
  
  finding    Finding  @relation(fields: [findingId], references: [id], onDelete: Cascade)
  author     User     @relation("FindingComments", fields: [authorId], references: [id])
  
  @@map("finding_comments")
}

model IntegrationSyncLog {
  id                String          @id @default(uuid())
  integrationId     String          @map("integration_id")
  status            SyncStatus
  startedAt         DateTime        @default(now()) @map("started_at")
  completedAt       DateTime?       @map("completed_at")
  
  recordsProcessed  Int             @default(0) @map("records_processed")
  findingsCreated   Int             @default(0) @map("findings_created")
  findingsUpdated   Int             @default(0) @map("findings_updated")
  
  error             String?
  details           Json?
  
  integration       CASBIntegration @relation(fields: [integrationId], references: [id], onDelete: Cascade)
  
  @@map("integration_sync_logs")
}

// User Integrations for external tools (Google, Jira, Slack)
model UserIntegration {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  provider  String   // 'google', 'jira', 'slack'
  config    Json     // Encrypted keys or tokens
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
  @@map("user_integrations")
}

// Enums
enum CASBIntegrationType {
  saas_office365
  saas_google_workspace
  saas_salesforce
  saas_slack
  saas_github
  saas_aws
  saas_azure
  saas_gcp
  onprem_exchange
  onprem_sharepoint
  onprem_active_directory
  casb_netskope
  casb_mcafee_mvision
  casb_zscaler
  casb_cisco_cloudlock
  casb_cloudflare
  agent_endpoint
  agent_network
}

enum IntegrationStatus {
  pending
  active
  failed
  disabled
  syncing
}

enum AuthType {
  oauth2
  api_key
  saml
  certificate
  basic_auth
}

enum FindingSeverity {
  critical
  high
  medium
  low
  info
}

enum FindingCategory {
  data_leak
  malware
  unauthorized_access
  policy_violation
  compliance_gap
  misconfiguration
  anomaly
  suspicious_activity
  vulnerability
  other
}

enum FindingStatus {
  open
  investigating
  in_progress
  resolved
  false_positive
  accepted_risk
  dismissed
}

enum SyncStatus {
  running
  completed
  failed
  cancelled
}
