{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": [
            "es2020"
        ],
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "noEmit": true,
        "types": [
            "node",
            "express",
            "jest"
        ],
        "allowJs": true,
        "checkJs": false
    },
    "include": [
        "src/**/*",
        "scripts/**/*",
        "prisma/**/*",
        "*.ts",
        "*.js",
        "*.mjs",
        "eslint.config.mjs"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage"
    ]
}