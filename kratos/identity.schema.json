{
    "$id": "https://schemas.ory.sh/presets/kratos/identity.email.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "User",
    "type": "object",
    "properties": {
        "traits": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "format": "email",
                    "title": "E-Mail",
                    "minLength": 3,
                    "ory.sh/kratos": {
                        "credentials": {
                            "password": {
                                "identifier": true
                            }
                        },
                        "verification": {
                            "via": "email"
                        },
                        "recovery": {
                            "via": "email"
                        }
                    }
                },
                "name": {
                    "type": "string",
                    "title": "Full Name",
                    "minLength": 1
                },
                "role": {
                    "type": "string",
                    "title": "Role",
                    "enum": [
                        "customer",
                        "auditor",
                        "manager",
                        "admin",
                        "compliance"
                    ]
                },
                "organizationId": {
                    "type": "string",
                    "title": "Organization ID"
                }
            },
            "required": [
                "email",
                "name",
                "role"
            ],
            "additionalProperties": false
        }
    }
}